@import 'normalize.css'
@import 'nib'
@import 'nib/gradients'
@import './components/mixins.styl'

@import './components/input.styl'
@import './components/cursor.styl'
@import './components/flex.styl'
@import './components/typography.styl'

controls-width = 250px

body
	background-color #CCC

#canvasContainer
	line-height 0
	position relative
	margin 1em

	canvas
		position absolute
		top 0
		left 0	
		&:first-child
			box-shadow #999 5px 5px 0

.hide
	display none !important
	// opacity 0
	// margin-top -100000px

#videoContainer	
	box-sizing border-box
	// border 2px solid red
	max-width 512px
	margin 1em
	background #333
	box-shadow #999 5px 5px 0
	button
		border-radius 0
	video
		max-height 270px
		flex 15
		margin-right 5px

#controls
	box-sizing border-box
	width controls-width
	padding 5px 7.5px 5px 5px
	height 100vh
	overflow auto
	background #FFF
	
	hr
		width 80%
		border-width 1px 0 0 0
		border-style solid
		border-color #CCC
	
	.button
	button
		margin 0
		padding 5px
	
	.sectionHeader i.fa
	button i.fa
	.button i.fa
		display block
		
	span.text
		box-sizing border-box
		&.hide
			display none
	
	.sectionHeader
	.itemHeader
	.itemLabel
		margin 5px 0
		

	.itemHeader
	.itemLabel
		i.fa
			margin-right 0.25em
	
	.itemLabel
		margin auto 0
		margin-right 0.25em
		box-sizing border-box
		white-space nowrap
		// For animation
		overflow hidden
		
		&.fixedWidth
			width 33.33%
	
	.sectionHeader
		text-align center

	.section
		position relative
		overflow hidden
		
		.section-minimize-button
			position absolute
			top 0em
			right 0em
			width 1.2em
			height 1.2em
			font-size 15px
			border none
			padding 0 0 0 1px
			span.text
				display none
	
	.col
		display flex
		margin-bottom 5px
		
		& .col
			margin-bottom 0
	
	.gradient-view
		width 100%

.sliderLabel
	width 31.2%
.col.displayContainer:not(:last-of-type)
	margin-bottom 0px !important
.displayLabel
	width 33%

.button, button, input, .col, .item, h4.itemHeader, select
	flex-grow 1
	flex-basis 0

@import './components/minimized-minimal-design.styl'
