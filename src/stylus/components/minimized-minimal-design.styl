.section
	transition max-height .2s linear
	max-height 100vh
	&:after
		transition opacity .4s
		content ''
		position absolute
		bottom 0
		width 100%
		height 0.5em
		shadow-color = #EEE
		background linear-gradient(top, rgba(shadow-color, 0), rgba(shadow-color, 1))
		opacity 0

.section.minimized
	margin-bottom 5px
	max-height 3.125em
	&:after
		opacity 1
		
	&.minimal
		max-height 2em

.section.minimal
	.sliderLabel
		width 1.25em
	i.fa + span.text
		display none

.one-line
	align-items center
	flex-direction row
	white-space nowrap